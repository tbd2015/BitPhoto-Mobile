<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:id="@+id/editTextUsuario"
        android:layout_below="@+id/nom"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/editTextCon"
        android:layout_alignEnd="@+id/editTextCon"
        android:hint="bitphoto@gmail.com"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Correo:"
        android:id="@+id/nom"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ContraseÃ±a"
        android:id="@+id/con"
        android:layout_below="@+id/editTextUsuario"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/editTextCon"
        android:layout_below="@+id/con"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:hint="****"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="validar"
        android:id="@+id/buttonIngresar"
        android:layout_marginTop="49dp"
        android:layout_below="@+id/editTextCon"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ingresar"
        android:id="@+id/buttonIngresados"
        android:visibility="invisible"
        android:layout_alignTop="@+id/buttonIngresar"
        android:layout_alignLeft="@+id/buttonIngresar"
        android:layout_alignStart="@+id/buttonIngresar" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Validando"
        android:id="@+id/montar"
        android:layout_below="@+id/buttonIngresar"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="85dp" />


</RelativeLayout>
